			"name": "TCID = 1 Получение всех постов",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Response is an array of 100 objects\", function () {\r",
							"    var json = pm.response.json();\r",
							"    pm.expect(json).to.be.an(\"array\").with.lengthOf(100);\r",
							"});\r",
							"\r",
							"pm.test(\"Each object has required fields\", function () {\r",
							"    var json = pm.response.json();\r",
							"    json.forEach(post => {\r",
							"        pm.expect(post).to.have.property(\"id\");\r",
							"        pm.expect(post).to.have.property(\"title\");\r",
							"        pm.expect(post).to.have.property(\"body\");\r",
							"        pm.expect(post).to.have.property(\"userId\");\r",
							"    });\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
